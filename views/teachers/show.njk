{% extends "layout.njk" %}

{% block content %} 
    <div class="card">
        <section 
            class="avatar" 
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.birth }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.graduation }}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ "Presencial" if teacher.type_class == "Presencial" else "À distância"}}</div>

            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for occupation in teacher.occupation_area %}
                    <span>{{ occupation }}</span>
                    {% endfor %}
            </div>
             <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}