<div class="item">
        <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
        </div>
    </div>

    <div class="item">
        <div>Nome Completo</div>
        <div>
            <input type="text" name="name" placeholder="Teacher's name" value="{{ teacher.name }}">
        </div>
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <div>
            <input type="date" name="birth" value="{{ teacher.birth }}">
        </div>
    </div>

    <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
            <select name="graduation">
                <option value="Medio" 
                {% if  teacher.graduation == 'Medio' %}
                    selected
                {% endif %}>Ensino Médio Completo</option>
                <option value="Superior"
                {% if  teacher.graduation == 'Superior' %}
                    selected
                {% endif %}>Ensino Superior Completo</option>
                <option value="Mestrado"
                {% if  teacher.graduation == 'Mestrado' %}
                    selected
                {% endif %}>Mestrado</option>
                <option value="Doutorado"
                {% if  teacher.graduation == 'Doutorado' %}
                    selected
                {% endif %}>Doutorado</option>
            </select>
        </div>
    </div>
    <div class="item">
        <div>Tipo de aula</div>
        <div>
            <span>
                <input type="radio" name="type_class" value="À distância"
                {% if  teacher.type_class == 'À distância' %}
                    checked
                {% endif %}> 
               À distância
            </span>
            <span>
                <input type="radio" name="type_class" value="Presencial"
                 {% if  teacher.type_class == 'Presencial' %}
                    checked
                {% endif %}> 
                Presencial
            </span>
        </div>
    </div>
    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input type="text" name="occupation_area" placeholder="Separe os serviços prestados por vírgula" value="{{ teacher.occupation_area }}">
        </div>
    </div>
    <button type="submit">Salvar</button>
