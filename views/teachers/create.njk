{% extends "layout.njk" %}

{% block content %} 
    <form class="card" method="POST" action="/teachers">
        <section 
            class="avatar" 
            style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center / cover">
        </section>
        <section class="details">
            <h3>New Teacher</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input type="text" name="nome" placeholder="Teacher's name">
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="nascimento">
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="escolaridade">
                        <option value="EnsinoMedio" selected>Ensino Médio Completo</option>
                        <option value="EnsinoSuperior">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="aula" value="À distância">À distância</span>
                    <span><input type="radio" name="aula" value="Presencial">Presencial</span>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="atuacao" placeholder="Separe os serviços prestados por vírgula">
                </div>
            </div>
            <button type="submit">Salvar</button>

        </section>
    </form>
{% endblock content %}