<div class="item">
        <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}">
        </div>
    </div>

    <div class="item">
        <div>Nome Completo</div>
        <div>
            <input type="text" name="name" placeholder="Student's name" value="{{ student.name }}">
        </div>
    </div>

    <div class="item">
        <div>Email</div>
        <div>
            <input type="email" name="email" value="{{ student.email }}">
        </div>
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <div>
            <input type="date" name="birth" value="{{ student.birth }}">
        </div>
    </div>

    <div class="item">
        <div>Ano escolar</div>
        <div>
            <select name="school">
                <option value="5º" 
                {% if  student.school == '5º' %}
                    selected
                {% endif %}>5º ano do ensino fundamental</option>
                <option value="6º"
                {% if  student.school == '6º' %}
                    selected
                {% endif %}>6º ano do ensino fundamental</option>
                <option value="7º"
                {% if  student.school == '7º' %}
                    selected
                {% endif %}>7º ano do ensino fundamental</option>
                <option value="8º"
                {% if  student.school == '8º' %}
                    selected
                {% endif %}>8º ano do ensino fundamental</option>
                <option value="9º"
                {% if  student.school == '9º' %}
                    selected
                {% endif %}>9º ano do ensino fundamental</option>
                <option value="1º"
                {% if  student.school == '1º' %}
                    selected
                {% endif %}>1º ano do ensino médio</option>
                <option value="2º"
                {% if  student.school == '2º' %}
                    selected
                {% endif %}>2º ano do ensino médio</option>
                <option value="3º"
                {% if  student.school == '3º' %}
                    selected
                {% endif %}>3º ano do ensino médio</option>
            </select>
        </div>
    </div>
    <div class="item">
        <div>Carga horária semanal</div>
        <div>
            <input type="number" name="workload" value="{{ student.workload }}">
        </div>
    </div>
    <button type="submit">Salvar</button>
